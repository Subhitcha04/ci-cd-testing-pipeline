pipeline {
    agent any
    
    tools {
        maven 'Maven 3.9.12'  // Matches the name in Jenkins Tools
        jdk 'JDK-17'          // Matches the name in Jenkins Tools
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building Java application...'
                dir('java-app') {
                    sh 'mvn clean compile'  // Use 'sh' for Linux servers
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running unit tests...'
                dir('java-app') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    dir('java-app') {
                        junit '**/target/surefire-reports/*.xml'
                    }
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'Packaging application...'
                dir('java-app') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Build SUCCESS! All tests passed.'
        }
        failure {
            echo '❌ Build FAILED! Tests did not pass - Quality Gate enforced.'
        }
        always {
            echo 'Pipeline completed.'
        }
    }
}